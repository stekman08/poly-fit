{
  "name": "poly-fit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "version": "node scripts/generate-version.js",
    "prestart": "bun run version",
    "start": "serve -l 3001",
    "test": "bun run test:unit && bun run test:e2e",
    "test:unit": "vitest run --exclude 'tests/unit/perf-*.test.js' && vitest run tests/unit/perf-*.test.js --pool=forks --no-file-parallelism",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:ui": "vitest --ui",
    "bench": "vitest bench",
    "coverage:merge": "node scripts/merge-coverage.js",
    "coverage:report": "nyc report --reporter=text --reporter=html --temp-dir=coverage/merged",
    "test:coverage:all": "bun run test:coverage && bun run test:e2e && bun run coverage:merge && bun run coverage:report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "canvas": "^3.2.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "nyc": "^17.1.0",
    "serve": "^14.2.5",
    "v8-to-istanbul": "^9.3.0",
    "vitest": "4.0.16"
  }
}
